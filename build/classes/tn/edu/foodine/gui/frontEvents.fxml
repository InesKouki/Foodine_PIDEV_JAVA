<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane id="AnchorPane" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.edu.foodine.gui.FrontEventsController">
   <children>
      <HBox alignment="CENTER_RIGHT" layoutY="-2.0" prefHeight="140.0" prefWidth="1715.0">
         <children>
            <ComboBox fx:id="sortComboBox" onAction="#selectSort" prefHeight="31.0" prefWidth="180.0" />
         </children>
      </HBox>
      <HBox layoutX="-1.0" layoutY="136.0" prefHeight="729.0" prefWidth="1920.0">
         <children>
            <ScrollPane prefHeight="706.0" prefWidth="1644.0" style="-fx-border-color: #FFFFFF; -fx-fit-to-width: true; -fx-background-color: #FFFFFF;" vbarPolicy="ALWAYS">
               <content>
                  <GridPane fx:id="eventsContainer" alignment="CENTER" prefHeight="0.0" prefWidth="0.0">
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                  </GridPane>
               </content>
            </ScrollPane>
         </children>
      </HBox>
      <ImageView fitHeight="55.0" fitWidth="200.0" layoutX="13.0" layoutY="13.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/logo.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
