<AnchorPane id="AnchorPane" fx:id="myAnchorPane" onMouseClicked="#clickItem" prefHeight="690.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.edu.esprit.gui.AfficherUtilisateurController">
   <children>
      <Label alignment="BOTTOM_LEFT" layoutX="274.0" layoutY="14.0" prefHeight="65.0" prefWidth="418.0" text="Liste des utilisateurs">
         <font>
            <Font name="System Bold Italic" size="37.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
      <TableView fx:id="tableList" layoutX="20.0" layoutY="160.0" onMouseClicked="#clickItem" prefHeight="400.0" prefWidth="810.0">
        <columns>
          <TableColumn fx:id="colNom" prefWidth="95.0" text="Nom" />
          <TableColumn fx:id="colPrenom" prefWidth="115.0" text="Prenom" />
            <TableColumn fx:id="colUsername" prefWidth="133.0" text="Username" />
            <TableColumn fx:id="colEmail" prefWidth="127.0" text="Email" />
            <TableColumn fx:id="colDate" prefWidth="210.0" text="Date d'inscription" />
            <TableColumn fx:id="colEtat" prefWidth="129.0" text="Etat" />
        </columns>
      </TableView>
      <Button layoutX="186.0" layoutY="584.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" styleClass="buttonItem" stylesheets="@authentification.css" text="Modifier" />
      <Button layoutX="469.0" layoutY="584.0" mnemonicParsing="false" onAction="#supprimerUtilisateur" prefHeight="40.0" prefWidth="200.0" styleClass="buttonItem" stylesheets="@authentification.css" text="Supprimer" />
      <Button fx:id="bloquer" layoutX="186.0" layoutY="584.0" mnemonicParsing="false" onAction="#bloquer" prefHeight="40.0" prefWidth="200.0" styleClass="buttonItem" stylesheets="@authentification.css" text="Bloquer" />
      <Button fx:id="debloquer" layoutX="186.0" layoutY="584.0" mnemonicParsing="false" onAction="#debloquer" prefHeight="40.0" prefWidth="200.0" styleClass="buttonItem" stylesheets="@authentification.css" text="Debloquer" />
      <TextField fx:id="Recherche" layoutX="535.0" layoutY="99.0" onKeyReleased="#Recherche" prefHeight="25.0" prefWidth="252.0" promptText="Recherche..." />
      <ImageView fitHeight="25.0" fitWidth="19.0" layoutX="796.0" layoutY="102.0" onMouseClicked="#Refresh" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/refresh.png" />
         </image>
      </ImageView>
      <MenuButton fx:id="menuButton" layoutX="40.0" layoutY="79.0" mnemonicParsing="false" onAction="#Trier" prefHeight="25.0" prefWidth="145.0" text="Trier">
        <items>
          <MenuItem fx:id="trierNom" mnemonicParsing="false" onAction="#trierNom" text="Trier par nom" />
          <MenuItem fx:id="tierDate" mnemonicParsing="false" onAction="#trierDate" text="Trier par date" />
            <MenuItem fx:id="trierEmail" mnemonicParsing="false" onAction="#trierEmail" text="Trier par Email" />
        </items>
      </MenuButton>
   </children>
</AnchorPane>
