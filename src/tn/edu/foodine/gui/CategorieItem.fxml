<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="211.0" prefWidth="360.0" stylesheets="@resources/styles/itemStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.edu.foodine.gui.CategorieItemController">
   <children>
      <VBox layoutY="-1.0" prefHeight="211.0" prefWidth="360.0" spacing="10.0" style="-fx-alignment: center;">
         <children>
            <ImageView fx:id="img" fitHeight="168.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
               <children>
                  <Label fx:id="labelCategory" text="aaa">
                     <font>
                        <Font name="Franklin Gothic Medium" size="22.0" />
                     </font>
                  </Label>
                  <Label fx:id="labelName" text="aaa">
                     <font>
                        <Font name="Franklin Gothic Medium" size="22.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Label fx:id="labelPrix" text="aa">
               <font>
                  <Font name="Franklin Gothic Medium" size="16.0" />
               </font>
            </Label>
            <Button fx:id="addToCart" mnemonicParsing="false" onAction="#addToCart" text="Ajouter au panier" />
         </children>
      </VBox>
   </children>
   <styleClass>
      <String fx:value="event-item" />
      <String fx:value="shadow" />
   </styleClass>
</AnchorPane>
